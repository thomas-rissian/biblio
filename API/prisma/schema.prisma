generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthorTest {
  id        Int       @id @default(autoincrement())
  name      String
  birthDate DateTime?
  deathDate DateTime?
  biography String?
  books     Book[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] @relation("BookCategories")
}

model Book {
  id              Int        @id @default(autoincrement())
  title           String
  description     String
  publicationDate DateTime
  authorId        Int
  author          AuthorTest @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categories      Category[] @relation("BookCategories")
}
